<section class="card left">
    <div class="card">
      <h5><%= @post.title %></h5>
      <p><%= @post.text %></p>
    </div>
  <div class="commets-container">
    <h4>Comments:</h4>
    <ul>
      <% @post.comments.each do |comment| %>
        <p><%= comment.author.name %>: <%= comment.text %></p>
      <% end %>
    </ul>
  </div>
</section>